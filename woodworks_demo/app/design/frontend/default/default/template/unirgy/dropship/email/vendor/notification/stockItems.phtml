<?php
$hlp = Mage::helper('udropship');
$vsAttr = Mage::getStoreConfig('udropship/vendor/vendor_sku_attribute');
$isShowVendorSku = Mage::helper('udropship')->isUdmultiAvailable();
if (!$isShowVendorSku) {
    if ($vsAttr && $vsAttr!='sku' && Mage::helper('udropship')->checkProductAttribute($vsAttr)) {
        $isShowVendorSku = true;
    }
}

?>
<table cellspacing="0" cellpadding="0" border="0" width="100%" style="border:1px solid #bebcb7; background:#f8f7f5;">
    <thead>
        <tr>
            <th align="left" bgcolor="#d9e5ee" style="padding:3px 9px"><?php echo Mage::helper('udropship')->__('Item') ?></th>
            <?php if ($isShowVendorSku): ?>
            <th align="left" bgcolor="#d9e5ee" style="padding:3px 9px"><?php echo Mage::helper('udropship')->__('System Sku') ?></th>
            <th align="left" bgcolor="#d9e5ee" style="padding:3px 9px"><?php echo Mage::helper('udropship')->__('Vendor Sku') ?></th>
            <?php else: ?>
            <th align="left" bgcolor="#d9e5ee" style="padding:3px 9px"><?php echo Mage::helper('udropship')->__('Sku') ?></th>
            <?php endif ?>
            <th align="center" bgcolor="#d9e5ee" style="padding:3px 9px"><?php echo Mage::helper('udropship')->__('Stock Qty') ?></th>
        </tr>
    </thead>
    <?php $i=0; foreach ($this->getStockItems() as $_item): ?>
    <tbody<?php echo ++$i%2 ? ' bgcolor="#eeeded"' : '' ?>>
        <tr>
            <td align="left" valign="top" style="padding:3px 9px"><?php echo $this->htmlEscape($_item->getName()) ?></td>
            <?php if ($isShowVendorSku): ?>
            <td align="left" valign="top" style="padding:3px 9px"><?php echo $this->htmlEscape($_item->getSku()) ?></td>
            <td align="left" valign="top" style="padding:3px 9px"><?php echo $this->htmlEscape($_item->getVendorSku()) ?></td>
            <?php else: ?>
            <td align="left" valign="top" style="padding:3px 9px"><?php echo $this->htmlEscape($_item->getSku()) ?></td>
            <?php endif ?>
            <td align="center" valign="top" style="padding:3px 9px"><?php echo $_item->getStockQty()*1 ?></td>
        </tr>
    </tbody>
    <?php endforeach; ?>
</table>
