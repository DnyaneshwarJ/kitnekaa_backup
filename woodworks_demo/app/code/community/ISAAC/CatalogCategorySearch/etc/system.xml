<config>
    <sections>
        <catalog>
            <groups>
                <catalog_category_search translate="label">
                    <label>Catalog Category Search</label>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <select_category_on_category_pages translate="label">
                            <label>Select Category On Category Pages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </select_category_on_category_pages>
                        <show_subcategories translate="label">
                            <label>Show Subcategories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_subcategories>
                        <indentation_text translate="label">
                            <label>Subcategory Indentation</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><show_subcategories>1</show_subcategories></depends>
                        </indentation_text>
                    </fields>
                </catalog_category_search>
            </groups>
        </catalog>
    </sections>
</config>
