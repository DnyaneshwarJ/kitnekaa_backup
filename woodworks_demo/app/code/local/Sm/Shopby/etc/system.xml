<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <sm translate="label" module="sm_shopby">
            <label>MagenTech.Com</label>
            <sort_order>205</sort_order>
        </sm>
    </tabs>	
    <sections>
        <sm_shopby translate="label" module="sm_shopby">
            <label>SM Shop By</label>
            <tab>sm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>250</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <catalog translate="label">
                    <label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <use_ajax translate="label">
                            <label>Use Ajax</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </use_ajax>
                        <price_slider translate="label">
                            <label>Use Price Slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </price_slider>
                        <multiple_filters translate="label">
                            <label>Multiple Choice Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </multiple_filters>
						<routing_suffix translate="label">
                            <label>Routing Souffix</label>
                            <frontend_type>text</frontend_type>
                            <comment>Used in url generation (it should be alphanumeric) - Do not use slash ( / )</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </routing_suffix>
                    </fields>
                </catalog>
				<product_information translate="label">
	            	<label>Product Information</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<author translate="label">
							<label><![CDATA[<p>Author: <a target="_blank" title="Magen Tech" href="http://www.magentech.com">Magen Tech</a></p>
											<p>Version: 1.0.0</p>
											<p>Userguide: <a target="_blank" title="Userguide" href="http://www.magentech.com/extensions/extension-user-guides">Userguide</a></p>
											<p>Support: <a target="_blank" href="http://www.magentech.com/forum">Forum</a></p>
								]]>
							</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>1</sort_order>
		            		<show_in_default>1</show_in_default>
						</author>
					</fields>
	            </product_information>				
            </groups>
        </sm_shopby>
    </sections>
</config>
