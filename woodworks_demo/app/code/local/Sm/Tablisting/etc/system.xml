						<nb_column4 translate="label">
		            		<label># Column</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>tablisting/system_config_source_listColumn</source_model>
		            		<comment>For devices have screen width less than or equal 767px</comment>
		            		<sort_order>40</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</nb_column4>
						<product_links_target translate="label">
                            <label>Link Target</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tablisting/system_config_source_linkTargets</source_model>
