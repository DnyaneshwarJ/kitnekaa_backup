<?xml version="1.0"?>
<config>
	<tabs>
        <sm>
            <label>MagenTech.com</label>
            <sort_order>250</sort_order>
        </sm>
    </tabs>
    <sections>
        <quickview translate="label" module="quickview">
            <label>SM Quickview</label>
            <tab>sm</tab><!-- Tham chieu den ten bat ky sm o tren -->
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>                
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>			
                    	<active>			
                            <label>Enable/Disable</label>
							<sort_order>1</sort_order>
							<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                  			
                    	</active>
						
						<item_class translate="label">
		            		<label>Item Class</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>2</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</item_class>
						<label_button translate="label">
                    		<label>Label Button</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</label_button> 
						<heading4 translate="label">
							<label>Popup Config</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>4</sort_order>
		            		<show_in_default>1</show_in_default>
						</heading4>						
                    	<auto_size translate="label">
                    		<label>Auto Size</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>5</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>If Yes, then sets both autoHeight and autoWidth to true.</comment>
                    	</auto_size> 	                    			
                        <popup_width translate="label">
                            <label>Popup Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>unit(percent), example: 100%</comment>
							<depends>
								<auto_size>0</auto_size>
							</depends>
                        </popup_width>		
						
						<popup_height translate="label">
                            <label>Popup Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>unit(percent), example: 100%</comment>
							<depends>
								<auto_size>0</auto_size>
							</depends>
                        </popup_height>
						
						<display_overlay translate="label">
                    		<label>Display Overlay</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>8</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</display_overlay> 
						<!-- <showEarly translate="label">
                    		<label>Show Early</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>9</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<display_overlay>1</display_overlay>
							</depends>
							<comment>For Display Overlay.</comment>
                    	</showEarly>  -->
						<open_effect translate="label">
                    		<label>Open Effect</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>quickview/system_config_source_ListEffects</source_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</open_effect> 
						<close_effect translate="label">
                    		<label>Close Effect</label>
		            		<frontend_type>select</frontend_type>
							<source_model>quickview/system_config_source_ListEffects</source_model>
		            		<sort_order>11</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</close_effect> 
						<heading5 translate="label">
							<label>InClude jQuery Libary</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>12</sort_order>
		            		<show_in_default>1</show_in_default>
						</heading5>		
						<include_jquery translate="label">
                    		<label>Include jQuery</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>13</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</include_jquery>  
                    </fields>
                </general>
				 <product_information translate="label">
	            	<label>Product Information</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<author translate="label">
							<label><![CDATA[<p>Author: <a target="_blank" title="Magen Tech" href="http://www.magentech.com">Magen Tech</a></p>
											<p>Version: 2.0.0</p>
											<p>Userguide: <a target="_blank" title="Userguide" href="http://www.magentech.com/extensions/extension-user-guides">Userguide</a></p>
											<p>Support: <a target="_blank" href="http://www.magentech.com/forum">Forum</a></p>
								]]>
							</label>
		            		<frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
		            		<sort_order>1</sort_order>
		            		<show_in_default>1</show_in_default>
						</author>
					</fields>
	            </product_information>
            </groups>
        </quickview>
    </sections>
</config>
