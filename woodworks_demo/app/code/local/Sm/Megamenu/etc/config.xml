		<acl>
			<resources>
				<admin>
					<children>
						<megamenu translate="title" module="megamenu">
							<title>SM MegaMenu</title>
							<children>
								<menugroup translate="title" module="megamenu">
									<title>Menu Manager</title>
								</menugroup>
								<menuitems translate="title" module="megamenu">
									<title>Menu Items Manager</title>
								</menuitems>
								<configurtion translate="title" module="megamenu">
									<title>Configuration</title>
								</configurtion>
							</children>
						</megamenu>						
						<system>
							<children>
								<config>
									<children>										
										<megamenu_cfg translate="title" module="megamenu">
											<title>SM MegaMenu Settings</title>
										</megamenu_cfg>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<megamenu>
					<file>sm/megamenu.xml</file>
				</megamenu>
			</updates>
		</layout>
    </adminhtml>   
	<default>
		<megamenu_cfg>
			<general>
				<isenabled>1</isenabled>
				<title></title>
			</general>	
			<module_setting>
				<!--<module_width>960</module_width>-->
				<group_id>1</group_id>
				<group_id_h>2</group_id_h>
				<theme>1</theme>
				<effect>1</effect>
				<effect_duration>3</effect_duration>
				<start_level>1</start_level>
				<end_level>10</end_level>
			</module_setting>				
			<advanced>
				<include_jquery>0</include_jquery>
				<pretext></pretext>
				<posttext></posttext>
			</advanced>
		</megamenu_cfg>
	</default>
</config>